<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <LinearLayout
        android:layout_gravity="bottom|center_horizontal"
        android:layout_margin="16dp"
        android:padding="10dp"
        android:background="@drawable/bg_card"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView android:text="● Earthquake" android:textColor="@color/text_primary" android:layout_marginEnd="12dp" android:layout_height="wrap_content" android:layout_width="match_parent"/>
        <TextView android:text="● Flood" android:textColor="@color/text_primary" android:layout_marginEnd="12dp"
            android:layout_height="wrap_content" android:layout_width="match_parent"/>
        <TextView android:text="● Cyclone" android:textColor="@color/text_primary"
            android:layout_height="wrap_content" android:layout_width="match_parent"/>
    </LinearLayout>
</FrameLayout>
