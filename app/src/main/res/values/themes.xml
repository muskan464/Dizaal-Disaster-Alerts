<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Base.Theme.DizaalDisasterAlerts" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary branding colors -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color_dark</item>
        <item name="colorSecondary">@color/accent_color</item>

        <!-- Status bar (notification bar) color -->
        <item name="android:statusBarColor">@color/primary_color_dark</item>

        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@color/background_secondary</item>

        <!-- Status bar icons/text color (light/dark) -->
        <item name="android:windowLightStatusBar">true</item>
        <!-- set to true for dark icons, false for light icons -->
    </style>

    <!-- Default Theme -->
    <style name="Theme.DizaalDisasterAlerts" parent="Base.Theme.DizaalDisasterAlerts" />

    <!-- Legacy fallback theme (if needed) -->
    <style name="Theme.Dizaal" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color_dark</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="android:statusBarColor">@color/primary_color_dark</item>
        <item name="android:navigationBarColor">@color/background_secondary</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>



</resources>
