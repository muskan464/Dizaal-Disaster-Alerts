<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:padding="16dp"
    android:background="@color/background_primary"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="@string/title_settings"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/text_primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout android:background="@drawable/bg_card" android:padding="12dp"
        android:layout_marginTop="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:text="Language" android:textColor="@color/text_primary"
            android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
        <TextView android:text="English" android:textColor="@color/text_secondary"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout android:background="@drawable/bg_card" android:padding="12dp"
        android:layout_marginTop="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:text="Notification Preferences" android:textColor="@color/text_primary"
            android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
        <TextView android:text="On" android:textColor="@color/text_secondary"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout android:background="@drawable/bg_card" android:padding="12dp"
        android:layout_marginTop="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:text="Dark Mode" android:textColor="@color/text_primary"
            android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchDark"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout android:background="@drawable/bg_card" android:padding="12dp"
        android:layout_marginTop="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:text="Clear Offline Data" android:textColor="@color/text_primary"
            android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout android:background="@drawable/bg_card" android:padding="12dp"
        android:layout_marginTop="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:text="About App" android:textColor="@color/text_primary"
            android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
        <TextView android:text="v1.0" android:textColor="@color/text_secondary"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
