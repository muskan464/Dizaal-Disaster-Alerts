<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/material_dynamic_neutral100"
        android:title="@string/title_home"
        app:titleTextColor="@color/text_primary"
        app:navigationIcon="@drawable/outline_arrow_left_alt_24"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:layout_marginTop="?attr/actionBarSize">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Severe Cyclone Warning"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:background="@drawable/bg_card"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvSeverity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Severity: Extreme"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_red_light"/>

                <TextView
                    android:id="@+id/tvRiskType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Risk: High Flood Risk"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_orange_dark"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Location: Coastal Districts"
                    android:layout_marginTop="6dp"/>

                <TextView
                    android:id="@+id/tvIssuedTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Issued: 12:00 PM, 30 Sep"
                    android:layout_marginTop="6dp"/>

                <TextView
                    android:id="@+id/tvExpectedTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Expected: 2:00 PM â€“ 10:00 PM"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>

            <TextView
                android:text="Description"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"/>
            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A severe cyclone is expected to make landfall..."
                android:layout_marginTop="6dp"/>

            <TextView
                android:text="Authority / Source"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"/>
            <TextView
                android:id="@+id/tvAuthority"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Meteorological Department"
                android:layout_marginTop="6dp"/>

            <TextView
                android:text="Instructions / Advisory"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"/>
            <TextView
                android:id="@+id/tvInstructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stay indoors, avoid coastal areas."
                android:layout_marginTop="6dp"/>

            <TextView
                android:text="Shelter Information"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"/>
            <TextView
                android:id="@+id/tvShelterInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nearest relief camp: Govt. School, XYZ Nagar"
                android:layout_marginTop="6dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:layout_marginTop="16dp">

                <TextView
                    android:text="Quick Actions"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnOpenMap"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:text="Map"
                        android:textSize="12sp"
                        app:icon="@drawable/ic_map"
                        app:iconGravity="top"
                        app:iconPadding="4dp"
                        style="@style/Widget.Material3.Button.TonalButton"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnShare"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="4dp"
                        android:text="Share"
                        android:textSize="12sp"
                        app:icon="@drawable/ic_share"
                        app:iconGravity="top"
                        app:iconPadding="4dp"
                        style="@style/Widget.Material3.Button.TonalButton"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCopyInfo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:text="Copy"
                        android:textSize="12sp"
                        app:icon="@drawable/outline_content_copy_24"
                        app:iconGravity="top"
                        app:iconPadding="4dp"
                        style="@style/Widget.Material3.Button.TonalButton"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
